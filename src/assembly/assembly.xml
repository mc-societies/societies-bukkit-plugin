<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>libraries</id>
    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>

            <excludes>
                <exclude>net.catharos.bridge:bridge</exclude>
                <exclude>net.catharos.bridge:bukkit-bridge</exclude>

                <exclude>net.catharos.lib:lib-groups</exclude>
                <exclude>net.catharos.lib:lib-core</exclude>
                <exclude>net.catharos.lib:lib-database</exclude>
                <exclude>net.catharos.lib:lib-shank</exclude>

                <exclude>net.catharos.societies:societies-api</exclude>
                <exclude>net.catharos.societies:societies</exclude>

                <exclude>org.apache.commons:commons-compress</exclude>
                <exclude>com.google.guava:guava</exclude>
                <exclude>org.apache.logging.log4j:log4j-core</exclude>
                <exclude>org.apache.logging.log4j:log4j-api</exclude>

                <exclude>net.catharos.societies:societies-bukkit-plugin</exclude>

                <exclude>org.bukkit:bukkit</exclude>
                <exclude>org.bukkit:craftbukkit</exclude>
                <exclude>org.spigotmc:spigot-api</exclude>
                <exclude>net.milkbowl.vault:VaultAPI</exclude>

                <exclude>org.jooq:jooq-codegen</exclude>

                <exclude>org.hamcrest:*</exclude>
                <exclude>junit:junit</exclude>
                <exclude>org.mockito:mockito*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
